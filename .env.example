# ============================================================
# .env.example — Safe template for GenAI Agent Platform
# Copy to .env and fill in real values. NEVER commit .env itself.
# ============================================================

ENV=production

# MongoDB
MONGO_URI=mongodb://mongo:27017/agent_memory
MONGODB_URI=mongodb://mongo:27017
MONGODB_DB=agent_memory

# Redis / Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Ollama (running on host)
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M
LLM_MAX_CONCURRENCY=2

# API
API_PORT=8000
API_KEY=__CHANGE_ME__

# Secrets — obtain from provider dashboards
HF_TOKEN=__HF_TOKEN__
SERPAPI_KEY=__SERPAPI_KEY__

# Thresholds
SIMILARITY_THRESHOLD=0.50
TIMEOUT_SECONDS=10
